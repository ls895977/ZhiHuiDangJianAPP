<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/red3">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:layout_marginTop="32dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="学习强局"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.lfc.zhihuidangjianapp.view.JudgeNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bt_gongkaike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_right"
                android:padding="@dimen/dip_10"
                android:text="林场公开课"
                android:textColor="#000"
                android:textSize="@dimen/fond_16sp" />
            <com.youth.banner.Banner
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_190" />
            <TextView
                android:id="@+id/bt_gongjiangpeiyang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_right"
                android:padding="@dimen/dip_10"
                android:text="工匠培养"
                android:textColor="#000"
                android:textSize="@dimen/fond_16sp" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/gongjiang_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/bt_xuexixingde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_right"
                android:padding="@dimen/dip_10"
                android:text="学习心得"
                android:textColor="#000"
                android:textSize="@dimen/fond_16sp" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/xuexingde_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.lfc.zhihuidangjianapp.view.JudgeNestedScrollView>
</LinearLayout>
