<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dip_10"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:text="王琪"
        android:textSize="@dimen/fond_16sp"
        android:textColor="#000000"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dip_5"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_yearMoth"
            android:layout_width="0dip"
            android:layout_weight="3"
            android:textColor="#70000000"
            android:text="2019/4"
            android:textSize="@dimen/fond_12sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_money"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:textColor="#70000000"
            android:paddingLeft="@dimen/dip_10"
            android:text="120元"
            android:textSize="@dimen/fond_12sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_bt_daijiao"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_width="0dip"
            android:layout_weight="3"
            android:text="代缴"
            android:gravity="center"
            android:paddingTop="@dimen/dip_5"
            android:textSize="@dimen/fond_12sp"
            android:paddingBottom="@dimen/dip_5"
            android:textColor="@color/white"
            android:background="@drawable/bg_bgparty"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
