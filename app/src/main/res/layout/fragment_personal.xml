<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
     >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:background="@drawable/shape_perback"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:background="@color/red3">

                    <ImageView
                        android:id="@+id/min_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dip_15"
                        android:layout_marginTop="@dimen/dip_25"
                        android:src="@mipmap/icon_left" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="36dp"
                        android:text="我是党员"
                        android:textColor="@color/white"
                        android:textSize="19dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/min_hader"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="17dp"
                    android:src="@mipmap/iocn_moren" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <View
                        android:id="@+id/view"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerHorizontal="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="38dp"
                        android:layout_toLeftOf="@id/view"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/img_integral" />

                        <TextView
                            android:id="@+id/min_Total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:text="0积分"
                            android:textColor="@color/white"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="38dp"
                        android:layout_toRightOf="@id/view"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/img_starclass" />

                        <TextView
                            android:id="@+id/min_starPartyMember"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:text="0星党员"
                            android:textColor="@color/white"
                            android:textSize="15dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="3dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名"
                            android:textColor="@color/grey_color3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/min_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="158dp"
                            android:textColor="@color/grey_color1"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别"
                            android:textColor="@color/grey_color3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/min_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="158dp"
                            android:textColor="@color/grey_color1"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="民族"
                            android:textColor="@color/grey_color3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/min_minzu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="158dp"
                            android:textColor="@color/grey_color1"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出生年月"
                            android:textColor="@color/grey_color3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/min_shenri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="158dp"
                            android:textColor="@color/grey_color1"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学历"
                            android:textColor="@color/grey_color3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/min_xueli"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="158dp"
                            android:textColor="@color/grey_color1"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="籍贯"
                            android:textColor="@color/grey_color3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/min_guanji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="158dp"
                            android:textColor="@color/grey_color1"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工作岗位"
                            android:textColor="@color/grey_color3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/min_gangwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="158dp"
                            android:textColor="@color/grey_color1"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单位/职务或职业"
                            android:textColor="@color/grey_color3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/min_zhiwu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="158dp"
                            android:textColor="@color/grey_color1"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="家庭住址"
                            android:textColor="@color/grey_color3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/min_addr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="158dp"
                            android:textColor="@color/grey_color1"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系电话"
                            android:textColor="@color/grey_color3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/min_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="158dp"
                            android:textColor="@color/grey_color1"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/min_Development"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="2dp"
                        android:text="编辑"
                        android:textColor="@color/red3"
                        android:textSize="16dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:text="党员发展进度"
                android:textColor="@color/black3"
                android:textSize="14dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="26dp"
                android:max="100"
                android:progress="50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:text="发展纪实"
                android:textColor="@color/black3"
                android:textSize="14dp" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"></ListView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lefit"
        android:layout_width="@dimen/dip_300"
        android:layout_gravity="left"
        android:layout_height="match_parent"
        android:background="@mipmap/icon_zehua"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dip_40"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/dip_140"
                android:layout_height="@dimen/dip_140"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_40"
                android:src="@mipmap/icon_test1"
                app:civ_border_color="#FF000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dip_45"
                android:layout_marginRight="@dimen/dip_60"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/min_naem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="哈哈"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/fond_22sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dip_10"
                    android:text="***党支部"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/fond_16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/dip_5"
                    android:text="***党总支"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/fond_16sp" />

                <TextView
                    android:id="@+id/min_Total1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/dip_5"
                    android:text="30积分"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/fond_16sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/min_shezhi"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dip_30"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dip_30">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dip_10"
                android:drawableLeft="@mipmap/icon_seeting"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_10"
                android:paddingBottom="@dimen/dip_10"
                android:text="设置"
                android:textSize="@dimen/fond_16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_mi_right" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:background="#10000000" />
        <RelativeLayout
            android:id="@+id/min_zhanghuanquan"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dip_10"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dip_30">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dip_10"
                android:drawableLeft="@mipmap/icon_anquan"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_10"
                android:paddingBottom="@dimen/dip_10"
                android:text="账户安全"
                android:textSize="@dimen/fond_16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_mi_right" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:background="#10000000" />
        <RelativeLayout
            android:id="@+id/min_gongzuozhoubao"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dip_10"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dip_30">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dip_10"
                android:drawableLeft="@mipmap/icon_zhoubao"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_10"
                android:paddingBottom="@dimen/dip_10"
                android:text="工作周报"
                android:textSize="@dimen/fond_16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_mi_right" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:background="#10000000" />
        <RelativeLayout
            android:id="@+id/min_dangfei"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dip_10"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dip_30">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dip_10"
                android:drawableLeft="@mipmap/icon_jiaofei"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_10"
                android:paddingBottom="@dimen/dip_10"
                android:text="党费缴纳"
                android:textSize="@dimen/fond_16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_mi_right" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:background="#10000000" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>