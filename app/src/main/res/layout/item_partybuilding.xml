<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/demonstration_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dip_10"
    android:paddingTop="@dimen/dip_5"
    android:paddingBottom="@dimen/dip_5">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_demonstration_img"
        android:layout_width="@dimen/dip_150"
        android:layout_height="@dimen/dip_100"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/dip_3"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dip_5"
        android:paddingLeft="@dimen/dip_10">

        <TextView
            android:id="@+id/item_demonstration_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dip_10"
            android:singleLine="true"
            android:text="支部引领丨坚持支部引领 力求担当实干 "
            android:textColor="#000000"
            android:textSize="@dimen/fond_16sp" />

        <TextView
            android:id="@+id/item_demonstration_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:paddingTop="@dimen/dip_10"
            android:text="内容：村里富不富，关键看支部。支部强不强，关键看头
羊。“村子的发展，党支部的作用至关重要。”"
            android:textColor="#80000000"
            android:textSize="@dimen/fond_14sp" />
    </LinearLayout>
</LinearLayout>
