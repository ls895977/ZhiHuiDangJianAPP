<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dip_5"
    android:layout_marginRight="@dimen/dip_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/new_xinde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bgtop"
            android:gravity="center"
            android:padding="@dimen/dip_15"
            android:text="新增学习心得"
            android:textColor="@color/red3"
            android:textSize="@dimen/fond_16sp" />

        <TextView
            android:id="@+id/new_xindecaogao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_05"
            android:background="@drawable/bg_bgbuttom"
            android:gravity="center"
            android:padding="@dimen/dip_15"
            android:text="草稿箱"
            android:textColor="@color/red3"
            android:textSize="@dimen/fond_16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/xinde_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_5"
        android:background="@drawable/bg_bg1"
        android:gravity="center"
        android:padding="@dimen/dip_15"
        android:text="取消"
        android:textColor="@color/red3"
        android:textSize="@dimen/fond_16sp" />
</LinearLayout>
