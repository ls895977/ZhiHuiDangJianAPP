<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/red1" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/dip_5" />
            <stroke android:width="1dp" android:color="@color/red1"></stroke>
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="1dp" android:right="1dp" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/dip_5" />
            <stroke android:width="1dp" android:color="#c0c0c0"></stroke>
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="1dp" android:right="1dp" />
        </shape>
    </item>
</selector>